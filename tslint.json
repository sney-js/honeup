{
  "extends": "tslint-config-prettier",
  "rules": {
    "quotemark": [true, "double", "jsx-double", "avoid-escape"],
    "semicolon": [true, "always", "ignore-bound-class-methods"],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never",
        "esSpecCompliant": true
      }
    ]
  }
}
